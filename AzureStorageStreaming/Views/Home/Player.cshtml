@{
    ViewBag.Title = "Player";
}

<h2>Player</h2>
<h1>HTML5 Player Framework</h1>
<object id="myVideo" class="pf-silverlight" data="data:application/x-silverlight-2," type="application/x-silverlight-2" width="480" height="320">
    <param name="source" value="xap/SmoothStreamingPlayer.xap"/>
    <param name="onError" value="onSilverlightError" />
    <param name="onLoad" value="onSilverlightLoad" />
    <param name="minRuntimeVersion" value="4.0.50401.0" />
    <param name="autoUpgrade" value="false" />
    <param name="enableGPUAcceleration" value="true" />
    <param name="windowless" value="true" />
    <param name="InitParams" value="scriptablename=Player,autoplay=false"/>
    <video class="pf-video" width="480" height="320" controls="controls">
        <source src="https:/lavalley.blob.core.windows.net/gopro/@ViewBag.FileName" type='video/mp4' />
        <div class="pf-static">
             HTML5 video is not supported.
        </div>
    </video>
</object>